<div class="pull-right action-buttons">    
      <script>
      $(document).ready(function () {   
      $('.send-form-after-change').change(function () {
        $(this).parents('form').submit();
    });    
}); 
      </script>
      
     <%= form_for (plan), url: "#{plans_url}/status/#{plan.id}",method: :post, remote: true do |form| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= form.select :status, options_for_select(Plan::STATUS.invert.to_a,selected:plan.status), {prompt: 'Select' },{id: "id-select2-types" , required: 'true' ,autofocus: 'true' , class: 'form-control input-sm send-form-after-change' } %>
                            <%= submit_tag "", :id => 'status',:style => 'display:none' %>
                            <%end%>
</div>